{{!-- Alerta que só aparece na página inicial se o produto for removido--}}
{{#if removedProd}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    Produto removido com sucesso!
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

{{!-- Adicionando produto --}}
<div class="row">
  <div class="col-6"><h1>Produtos</h1></div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/addprod" type="button" class="btn btn-primary align-self-center">+ novo produto</a>
  </div>
</div>


{{!-- Exibindo a tabela de dados --}}
<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      {{!-- Escondi o ID mas renderizará para o servidor --}}
      <th scope="col" hidden>ID</th>
      <th scope="col"><i class="bi bi-upc-scan"></i></th>
      <th scope="col">Nome</th>
      <th scope="col">Categoria</th>
      <th scope="col">Preço</th>
      <th scope="col">Estoque</th>
      <th scope="col" class="text-center">Ação</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      {{!-- Escondi o ID mas renderizará para o servidor --}}
      <th scope="row" hidden>{{this.id}}</th>
      <th scope="row">{{this.cod_barra}}</th>
      <td>{{this.nome}}</td>
      <td>{{this.categoria}}</td>
      <td>{{this.preco}}</td>
      <td>{{this.qtd_estoque}}</td>
      {{!-- Botões de Ação --}}
      <td class="text-center">
          <a href="/viewprod/{{this.id}}" type="button" class="btn btn-light btn-sm"> <i class="bi bi-eye"></i> Exibir</a>
          <a href="/editprod/{{this.id}}" type="button" class="btn btn-light btn-sm"><i class="bi bi-pencil-square"></i> Editar</a>
          <a href="/{{this.id}}" type="button" class="btn btn-light btn-sm"> <i class="bi bi-x-square"></i> Excluir</a>
     </td>
    </tr>
    {{/each}}

  </tbody>
</table>